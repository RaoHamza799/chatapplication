<h4 class="ui center orange aligned large icon header">
  <i class="circular orange user circle icon"></i>
  LOGIN HERE
  </h4>


<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
        <%= form_with(scope: :session, url: login_path, class: "ui form ",local: true) do |f| %>
        
          <%= f.label :username, class: "field" %>
            <i class="user icon"></i>
            <%= f.text_field :username, class: "ui left icon input", placeholder: "Enter your Name here" %>
             
          <%= f.label :password, class: "" %>
            <i class="lock icon"></i>
            <%= f.password_field :password, class: "", placeholder: "Enter your password" %>
          <%= f.submit "Log in", class: "ui red submit button" %>
      <% end %>
      </div>
         </div>
              <div class="middle aligned column">
                   <div class="ui inverted red big button">
                        <i class="ui  signup icon"></i>
                                  Sign Up
                    </div>
                </div>
         <div class="ui vertical divider">
            Or
         </div>
</div>
